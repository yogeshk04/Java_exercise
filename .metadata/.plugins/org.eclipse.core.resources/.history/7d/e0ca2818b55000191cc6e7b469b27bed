package com.course.exercise;

public class arrayexample1 {
	public static void main(String[] args) {
		int array[] = new int[3];

		System.out.println("Array at index 0 is: " + array[0]);
		System.out.println("Array at index 0 is: " + array[1]);
		System.out.println("Array at index 0 is: " + array[2]);
//		System.out.println("Array at index 0 is: " + array[3]);

		array[0] = 10;
		array[1] = 20;
		array[2] = 30;

		for (int i = 0; i < array.length; i++) {
			System.out.println("Index " + i +" --> "+ array[i]);
		}
	}

}
